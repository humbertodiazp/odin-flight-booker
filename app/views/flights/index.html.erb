<div class="max-w-md mx-auto mt-10">
  <% if flash[:alert] %>
    <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4">
      <%= flash[:alert] %>
    </div>
  <% end %>
  
  <%= form_tag flights_path, method: :get, class: "mb-4" do %>
    <div class="flex items-center mb-4">
      <%= label_tag :departure_airport_id, "Departure airport:", class: "mr-2" %>
      <%= select_tag :departure_airport_id, options_for_select(@airport_options), class: "form-select" %>
    </div>

    <div class="flex items-center mb-4">
      <%= label_tag :arrival_airport_id, "Arrival airport:", class: "mr-2" %>
      <%= select_tag :arrival_airport_id, options_for_select(@airport_options), class: "form-select" %>
    </div>

    <div class="flex items-center mb-4">
      <%= label_tag :departure_time, "Departure time:", class: "mr-2" %>
      <%= text_field_tag :departure_time, nil, class: "form-input" %>
    </div>

    <%= submit_tag "Search flights", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
  <% end %>

  <% if @booking_options.present? %>
    <% @booking_options.each do |booking_option| %>
      <div class="bg-gray-100 border border-gray-300 p-4 rounded mb-4">
        <p class="font-bold mb-2"><%= booking_option.flight_name %></p>
        <p class="text-sm mb-2"><%= booking_option.departure_time.strftime("%A, %B %e, %Y at %l:%M %p") %></p>
        <p class="text-sm mb-2"><%= booking_option.arrival_time.strftime("%A, %B %e, %Y at %l:%M %p") %></p>
        <p class="text-lg"><%= number_to_currency(booking_option.price) %></p>
      </div>
    <% end %>
  <% end %>
</div>
