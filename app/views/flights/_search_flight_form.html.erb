<%= form_with url: flights_path, method: :get, class: "bg-white p-4 rounded-md shadow-sm" do |f| %>
  <div class="form-field mb-4">
    <%= f.label "Depart From:", class: "text-gray-700 font-semibold mb-2" %>
    <%= f.select(:departure_airport_id,
                 options_for_select(@airport_options, params[:departure_airport_id]),
                 class: "form-select",
                 required: true ) %>
  </div>

  <div class="form-field mb-4">
    <%= f.label "Arrive at:", class: "text-gray-700 font-semibold mb-2" %>
    <%= f.select(:arrival_airport_id,
                 options_for_select(@airport_options, params[:arrival_airport_id]),
                 class: "form-select",
                 required: true ) %>
  </div>

  <div class="form-field mb-4">
    <%= f.label "Passengers", class: "text-gray-700 font-semibold mb-2" %>
    <%= f.select(:passenger_count,
                 options_for_select([1, 2, 3, 4], params[:passenger_count]),
                 class: "form-select",
                 required: true ) %>
  </div>

  <div class="form-field mb-4">
    <%= f.label "Date", class: "text-gray-700 font-semibold mb-2" %>
    <%= f.date_field :departure_time,
                      value: params[:departure_time],
                      class: "form-input",
                      required: true,
                      placeholder: "dd/mm/yyyy" %>
  </div>

  <div class="form-button">
    <%= f.submit "Find Flights", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-full" %>
  </div>
<% end %>
